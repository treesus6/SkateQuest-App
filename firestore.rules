rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    match /challenges/{challengeId} {
      allow read: if true;  // Anyone can read challenges
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    match /spots/{spotId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /trick_callouts/{calloutId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.challengerId;
    }

    match /challenges/{challengeId}/proofs/{proofId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /shops/{shopId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Portal Dimension click tracking - writes should come from Cloud Functions (server-side) or authenticated users
    match /portalDimensionClicks/{clickId} {
      allow read: if true;  // Anyone can read stats for analytics
      // Deny direct client writes; logs should be written server-side from Cloud Functions
      allow create, update, delete: if false;
    }
  }
}
