rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile pictures: stored under profile_pics/{uid}/...
    match /profile_pics/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // < 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Spot videos: stored under skate_spots_videos/{uid}/...
    match /skate_spots_videos/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 60 * 1024 * 1024 // < 60MB
                   && request.resource.contentType.matches('video/.*');
    }

    // Spot images: stored under spot_images/{uid}/...
    match /spot_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // < 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Deny all other writes to the bucket
    allow write: if false;
  }
}
